<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To-Do List</title>
    <link rel="stylesheet" href="/app.css" />
  </head>
  <body>
    <div class="container">
      <h1>To-Do List</h1>
      <form id="taskform" action="/" method="post">
        <div class="addTask">
          <input type="text" name="tasks" placeholder="Enter Your Task" />
          <button class="add-btn">Add</button>
        </div>
      </form>
      <div class="tasks">
        <ul id="tasklist">
          <% tasks.forEach((task,index)=>{ %>
          <li>
            <%= task %>
            <input
              type="checkbox"
              id="task-<%= index %>"
              name="taskIndex"
              value="<%= index %>"
            />
          </li>
          <% }); %>
        </ul>
        <form action="/del" method="post">
          <button id="btn-clear">Clear</button>
        </form>
      </div>
    </div>
    <script>
      //Implement all functionalities functionality
    </script>
  </body>
</html>
